<% @user = Helpers.current_user(session) %>
<% if Helpers.is_logged_in?(session) %>

	<h1>All tweets</h1>

	<hr>
	<% @tweets.each do |tweet| %>

	  <h3> <a href='/tweets/<%= "#{tweet.id}" %>'> <%= tweet.user.username %> </a>

	  <h3> <a href='/tweet/<%= "#{tweet.id}" %>'> <%= tweet.user.username %> </a>

	  <h3>
	  <h4> <%= tweet.content %> <h4>
	  <hr>
	<% end %>
<% else %>
  <a href="/users/login" />
<% end %>
